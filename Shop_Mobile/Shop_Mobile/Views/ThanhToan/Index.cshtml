@model List<Shop_Mobile.Models.BUS.HoaDonDeitails>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        #invoice {
            width: 80%;
            margin: auto;
            border: 1px solid #ccc;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            #invoice h2 {
                color: #333;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        #total {
            margin-top: 20px;
            text-align: right;
        }
    </style>
</head>
<body>

    <div id="invoice">
        <h2>Chi tiết hóa đơn</h2>

        <table>
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                <!-- Thay đổi dữ liệu theo chi tiết hóa đơn của bạn -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenSanPham</td>
                        <td>@item.SoLuong</td>
                        <td>@item.Gia</td>
                        <td>@item.TongTien</td>
                    </tr>
                }

               
            </tbody>
        </table>

        <div id="total">
            <p><strong>Tổng cộng: </strong></p>
        </div>
    </div>

</body>
</html>


