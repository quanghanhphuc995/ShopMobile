@model Shop_Mobile.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<div class="container">
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="row">
        <div class="col-md-12">
            <h4>Thay đổi thông tin tài khoản</h4>
            <hr />
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-2">Password:</label>
                    <div class="col-md-10">
                        @if (Model.HasPassword)
                        {
                            @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-default" })
                        }
                        else
                        {
                            @Html.ActionLink("Create", "SetPassword", null, new { @class = "btn btn-default" })
                        }
                    </div>
                </div>
                @*<div class="form-group">
                    <label class="control-label col-md-2">External Logins:</label>
                    <div class="col-md-10">
                        @Model.Logins.Count @Html.ActionLink("Manage", "ManageLogins", null, new { @class = "btn btn-default" })
                    </div>
                </div>*@
               
                <div class="form-group">
                    <label class="control-label col-md-2">phone number:</label>
                    <div class="col-md-10">
                        @if (Model.PhoneNumber != null)
                        {
                            <div>@Model.PhoneNumber</div>
                            @Html.ActionLink("Change", "AddPhoneNumber", null, new { @class = "btn btn-default" })
                            using (Html.BeginForm("RemovePhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="Remove" class="btn btn-link" />
                            }
                        }
                        else
                        {
                            @Html.ActionLink("Add", "AddPhoneNumber", null, new { @class = "btn btn-default" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
