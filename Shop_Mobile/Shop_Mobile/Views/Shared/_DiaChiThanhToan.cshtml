@model ShopConnection.ThongTinKhachHang

<style>
    .size-imgs {
        max-height: 20px;
        max-width: 20px;
    }
</style>

<h2>Địa chỉ giao hàng </h2>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Tên Khách Hàng</th>
                <th>Địa Chỉ Giao Hàng</th>
                <th>Số Điện Thoại Liên Lạc</th>
                <th></th>
            </tr>
        </thead>
        <tbody> 
                <tr>
                    <td>@Model.NguoiDat</td>
