@model IEnumerable<ShopConnection.HoaDon>
@{
    ViewBag.Title = "ChiTieHoaDonAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    #invoice {
        width: 80%;
        margin: auto;
        border: 1px solid #ccc;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        #invoice h2 {
            color: #333;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    #total {
        margin-top: 20px;
        text-align: right;
    }
</style>

<body>

    <div id="invoice">
        <h2>Chi Tiết Hóa Đơn Khách Hàng</h2>

        <table>
            <thead>
                <tr>
                    <th>Mã Sản Phẩm</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Hình Ảnh</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>

                </tr>
            </thead>
            <tbody>
                <!-- Thay đổi dữ liệu theo chi tiết hóa đơn của bạn -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td> <a href="@Url.Action("Details","SanPhamAdmin", new {id = item.MaSanPham })">@item.MaSanPham</a></td>
                        <td><a href="@Url.Action("Details","SanPhamAdmin", new {id = item.MaSanPham })"><img src="~/Asset/img/@item.HinhChinh" /></a></td>
                        <td>@item.SoLuong</td>
                        <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C}", item.Gia)</td>
                        <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C}", item.TongTien)</td>

                    </tr>
                }
            </tbody>
        </table>


        
    </div>

</body>