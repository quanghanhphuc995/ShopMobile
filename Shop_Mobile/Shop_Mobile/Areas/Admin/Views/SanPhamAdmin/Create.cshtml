
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<script src="~/Areas/Admin/AssetAdmin/js/PreviewFile.js"></script>

<style>
    input[type=text] {
        width: 100%;
        height: 40px;
        background: white;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
        color: black;
    }
    .floatleft{
        float:left
    }
    input[type=number] {
        width: 100%;
        height: 40px;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>
@using (Html.BeginForm("Create", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


<table style="width:80% ;margin:auto; background:black;">
    <tr>
        <td>Mã Sản Phẩm</td>
        <td> <input style="width: 300px;float:left; " maxlength="11" type="text" name="MaSanPham" required /></td>
        
    </tr>
    <tr>
        <td>Mã Loại Sản Phẩm</td>
        <td>
            @if (ViewBag.MaloaiSanPham != null) {
                 @Html.DropDownList("MaLoaiSanPham", ViewBag.MaLoaiSanPham as SelectList, "chọn nhà sản xuất", new { @style = "float:left; width: 300px; background:black;height:30px;" })
            }

        </td>
    </tr>
    <tr>
        <td>Tên Sản Phẩm</td>
        <td> <input style="width: 300px;float:left;" type="text" name="TenSanPham" maxlength="50" required /></td>
        
    </tr>
    <tr>
        <td>Hình Ảnh</td>
        <td> <input id="file_Hinh" type="File" name="HinhChinh" onchange="previewFile()"  /></td>
        <td>
            <img id="target" class="img" src="#" alt="your img" style="max-height:100px; max-width:100px;" />
        </td>
    </tr>
    <tr>
        <td>Hình Ảnh 1</td>
        <td> <input id="file_Hinh1" type="file" name="Hinh1" onchange="previewFile()" /></td>
        <td>
            <img id="target" class="img" src="#" alt="your img" style="max-height:100px; max-width:100px;" />
        </td>
    </tr>
    <tr>
        <td>Hình Ảnh 2</td>
        <td> <input id="file_Hinh2" type="file" name="Hinh2" onchange="previewFile()"  /></td>
    </tr>
    <tr>
        <td>Hình Ảnh 3</td>
        <td> <input id="file_Hinh3" type="file" name="Hinh3" onchange="previewFile()"  /></td>
    </tr>
    <tr>
        <td>Hình Ảnh 4</td>
        <td> <input id="file_Hinh4" type="file" name="Hinh4" onchange="previewFile()"  /></td>
    </tr>
    <tr>
        <td>Giá</td>
        <td> <input style="width: 300px; float:left; background:white; color:black" type="number" name="Gia" required /></td>
    </tr>
    <tr>
        <td>Ghi Chú</td>
        <td> <input style="width: 300px;float:left;" type="text" name="GhiChu" required /></td>
    </tr>
    <tr>
        <td>Nhà Sản Xuất</td>
        <td>
            @if (ViewBag.MaNhaSanXuat != null)
            {
                @Html.DropDownList("MaNhaSanXuat", ViewBag.MaNhaSanXuat as SelectList, new { @style = "float:left; width: 300px; background:black;height:30px;" })
            }

        </td>
    </tr>
    <tr>

        <td style="width: 300px;">Cấu Hình</td>
        <td colspan="2"><textarea class="ckeditor" name="CauHinh" style="width: 300px; color:black; height: 150px; max-width: 100px; max-height: 600px; background:white;" rows="4" cols="30"></textarea></td>
    </tr>
    <tr>
        <td colspan="3">
            <input style="height: 40px; width: 300px;   margin-left:32%;
	 background:#016ABC;color: #fff;border: 1px solid #eee;border-radius: 20px;box-shadow: 5px 5px 5px #eee;"
                   type="submit" name="btn_ThemDienThoai" value="Hoàn tất thêm điện thoại" />
        </td>
    </tr>
</table>
}
