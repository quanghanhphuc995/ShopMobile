@model Shop_Mobile.Models.BUS.ViewSanPhamChiTiet
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}



<style>
    .form-group label {
        display: block;
        margin-bottom: 5px;
        margin-left: 20px;
    }
    .form-group input {
        color: #000;
        margin-left: 20px;
    }
    .form-group select{
        margin-left: 20px;
    }
   .fz-img{
       margin:20px 0 0 20px ;
   }
</style>

@using (Html.BeginForm("Edit", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="MaSanPham">Mã Sản Phẩm</label>
                    <input type="text" class="form-control" name="MaSanPham" maxlength="11" value="@Model.MaSanPham " readonly>
                </div>

                <div class="form-group">
                    <label for="MaLoaiSanPham">Mã Loại Sản Phẩm</label>
                    @Html.DropDownList("MaLoaiSanPham", null, new { @class = "dropdown-style" })
                </div>

                <div class="form-group">
                    <label for="TenSanPham">Tên Sản Phẩm</label>
                    <input type="text" class="form-control" name="TenSanPham" maxlength="1000" value="@Model.TenSanPham" required>
                </div>

                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh</label>
                    <input type="file" class="form-control-file" id="file_Hinh" name="HinhChinh" onchange="previewFile('file_Hinh','target')">
                    <img id="target" class="img-fluid fz-img" src="~/Asset/img/@Model.HinhChinh" alt="your img" />
                </div>
                
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 1</label>
                    <input type="file" class="form-control-file" id="file_Hinh1" name="Hinh1" onchange="previewFile('file_Hinh1','target1')">
                    <img id="target1" class="img-fluid fz-img" src="~/Asset/img/@Model.Hinh1" alt="your img" />
                </div>
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 2</label>
                    <input type="file" class="form-control-file" id="file_Hinh2" name="Hinh2" onchange="previewFile('file_Hinh2','target2')">
                    <img id="target2" class="img-fluid fz-img" src="~/Asset/img/@Model.Hinh2" alt="your img" />
                </div>
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 3</label>
                    <input type="file" class="form-control-file" id="file_Hinh3" name="Hinh3" onchange="previewFile('file_Hinh3','target3')">
                    <img id="target3" class="img-fluid fz-img" src="~/Asset/img/@Model.Hinh3" alt="your img" />
                </div>
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 4</label>
                    <input type="file" class="form-control-file" id="file_Hinh4" name="Hinh4" onchange="previewFile('file_Hinh4','target4')">
                    <img id="target4" class="img-fluid fz-img" src="~/Asset/img/@Model.Hinh4" alt="your img" />
                </div>

                <!-- Tương tự cho các trường upload hình ảnh khác -->

                <div class="form-group">
                    <label for="Gia">Giá</label>
                    <input type="number" class="form-control" name="Gia" value="@Model.Gia">
                </div>

                <div class="form-group">
                    <label for="SoLuong">Số Lượng</label>
                    <input type="number" class="form-control" name="SoLuong" value="@Model.SoLuong">
                </div>

                <div class="form-group">
                    <label for="GhiChu">Ghi Chú</label>
                    <input type="text" class="form-control" name="GhiChu" value="@Model.GhiChu">
                </div>

                <div class="form-group">
                    <label for="MaNhaSanXuat">Nhà Sản Xuất</label>
                    @Html.DropDownList("MaNhaSanXuat", null, new { @class = "dropdown-style" })
                </div>

                <!-- Các trường thông tin kỹ thuật khác như Màn Hình, Hệ Điều Hành, Camera, ... -->

                <div class="form-group">
                    <label for="ManHinh">Màn Hình</label>
                    <input type="text" class="form-control" name="ManHinh" value="@Model.ManHinh">
                </div>

                <div class="form-group">
                    <label for="MaHeDieuHanh">Hệ Điều Hành</label>
                   
                        @Html.DropDownList("MaHeDieuHanh",null, new { @class = "dropdown-style" })
                    
                </div>

                <div class="form-group">
                    <label for="CameraSau">CameraSau</label>
                    <input type="text" class="form-control" name="CameraSau" value="@Model.CameraSau">
                </div>

                <div class="form-group">
                    <label for="CameraTruoc">CameraTruoc</label>
                    <input type="text" class="form-control" name="CameraTruoc" value="@Model.CameraTruoc">
                </div>

                <div class="form-group">
                    <label for="CPU">CPU</label>
                    <input type="text" class="form-control" name="CPU" value="@Model.CPU">
                </div>

                <div class="form-group">
                    <label for="MaRam">Ram</label>
                   
                        @Html.DropDownList("MaRam", null, new { @class = "dropdown-style" })
                    
                </div>

                <div class="form-group">
                    <label for="MaBoNhoTrong">Bộ Nhớ Trong</label>
                   
                        @Html.DropDownList("MaBoNhoTrong",null, new { @class = "dropdown-style" })
                    
                </div>

                <div class="form-group">
                    <label for="TheSim">Thẻ Sim</label>
                    <input type="text" class="form-control" name="TheSim" value="@Model.TheSim">
                </div>

                <div class="form-group">
                    <label for="DungLuongPin">Dung Lượng Pin</label>
                    <input type="text" class="form-control" name="DungLuongPin" value="@Model.DungLuongPin">
                </div>

                <div class="form-group">
                    <label for="ThietKe">Thiết Kế</label>
                    <input type="text" class="form-control" name="ThietKe" value="@Model.ThietKe">
                </div>
                <!-- Tiếp tục với các trường khác theo mẫu này -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="margin-left:20px;">Chỉnh Sửa Sản Phẩm</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Areas/AssetAdmin/js/product/previewFile.js"></script>

