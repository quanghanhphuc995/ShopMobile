@model ShopConnection.ThongTinKhachHang

<style>
    .size-imgs {
        max-height: 20px;
        max-width: 20px;
    }
</style>
<title>Thông tin khách hàng</title>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên Khách Hàng</th>
