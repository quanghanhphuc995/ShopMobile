
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


@using (Html.BeginForm("Create", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="MaSanPham">Mã Sản Phẩm</label>
                    <input type="text" class="form-control" name="MaSanPham" maxlength="11" required>
                </div>

                <div class="form-group">
                    <label for="MaLoaiSanPham">Mã Loại Sản Phẩm</label>
                    @if (ViewBag.MaloaiSanPham != null)
                    {
                        @Html.DropDownList("MaLoaiSanPham", ViewBag.MaLoaiSanPham as SelectList, "Chọn loại sản phẩm", new { @class = "form-control" })
                    }
                </div>

                <div class="form-group">
                    <label for="TenSanPham">Tên Sản Phẩm</label>
                    <input type="text" class="form-control" name="TenSanPham" maxlength="1000" required>
                </div>

                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh</label>
                    <input type="file" class="form-control-file" id="file_Hinh" name="HinhChinh" onchange="previewFile('file_Hinh','target')">
                    <img id="target" class="img-fluid" src="#" alt="your img" />
                </div>
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 1</label>
                    <input type="file" class="form-control-file" id="file_Hinh1" name="Hinh1" onchange="previewFile('file_Hinh1','target1')">
                    <img id="target1" class="img-fluid" src="#" alt="your img" />
                </div>
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 2</label>
                    <input type="file" class="form-control-file" id="file_Hinh2" name="Hinh2" onchange="previewFile('file_Hinh2','target2')">
                    <img id="target2" class="img-fluid" src="#" alt="your img" />
                </div>
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 3</label>
                    <input type="file" class="form-control-file" id="file_Hinh3" name="Hinh3" onchange="previewFile('file_Hinh3','target3')">
                    <img id="target3" class="img-fluid" src="#" alt="your img" />
                </div>
                <div class="form-group">
                    <label for="file_Hinh">Hình Ảnh 4</label>
                    <input type="file" class="form-control-file" id="file_Hinh4" name="Hinh4" onchange="previewFile('file_Hinh4','target4')">
                    <img id="target4" class="img-fluid" src="#" alt="your img" />
                </div>

                <!-- Tương tự cho các trường upload hình ảnh khác -->

                <div class="form-group">
                    <label for="Gia">Giá</label>
                    <input type="number" class="form-control" name="Gia" required>
                </div>

                <div class="form-group">
                    <label for="SoLuong">Số Lượng</label>
                    <input type="number" class="form-control" name="SoLuong" required>
                </div>

                <div class="form-group">
                    <label for="GhiChu">Ghi Chú</label>
                    <input type="text" class="form-control" name="GhiChu" required>
                </div>

                <div class="form-group">
                    <label for="MaNhaSanXuat">Nhà Sản Xuất</label>
                    @if (ViewBag.MaNhaSanXuat != null)
                    {
                        @Html.DropDownList("MaNhaSanXuat", ViewBag.MaNhaSanXuat as SelectList, "Chọn nhà sản xuất", new { @class = "form-control" })
                    }
                </div>

                <!-- Các trường thông tin kỹ thuật khác như Màn Hình, Hệ Điều Hành, Camera, ... -->

                <div class="form-group">
                    <label for="ManHinh">Màn Hình</label>
                    <input type="text" class="form-control" name="ManHinh">
                </div>

                <div class="form-group">
                    <label for="MaHeDieuHanh">Hệ Điều Hành</label>
                    @if (ViewBag.MaHeDieuHanh != null)
                    {
                        @Html.DropDownList("MaHeDieuHanh", ViewBag.MaHeDieuHanh as SelectList, "Chọn hệ điều hành", new { @style = "float:left; width: 300px; background:black;height:30px;" })
                    }
                </div>

                <div class="form-group">
                    <label for="CameraSau">CameraSau</label>
                    <input type="text" class="form-control" name="CameraSau">
                </div>

                <div class="form-group">
                    <label for="CameraTruoc">CameraTruoc</label>
                    <input type="text" class="form-control" name="CameraTruoc">
                </div>

                <div class="form-group">
                    <label for="CPU">CPU</label>
                    <input type="text" class="form-control" name="CPU">
                </div>

                <div class="form-group">
                    <label for="MaRam">Ram</label>
                    @if (ViewBag.MaRam != null)
                    {
                        @Html.DropDownList("MaRam", ViewBag.MaRam as SelectList, "Chọn dung lượng Ram", new { @style = "float:left; width: 300px; background:black;height:30px;" })
                    }
                </div>

                <div class="form-group">
                    <label for="MaBoNhoTrong">Ram</label>
                    @if (ViewBag.MaBoNhoTrong != null)
                    {
                        @Html.DropDownList("MaBoNhoTrong", ViewBag.MaBoNhoTrong as SelectList, "Chọn bộ nhớ trong", new { @style = "float:left; width: 300px; background:black;height:30px;" })
                    }
                </div>

                <div class="form-group">
                    <label for="TheSim">Thẻ Sim</label>
                    <input type="text" class="form-control" name="TheSim">
                </div>

                <div class="form-group">
                    <label for="DungLuongPin">Dung Lượng Pin</label>
                    <input type="text" class="form-control" name="DungLuongPin">
                </div>

                <div class="form-group">
                    <label for="ThietKe">Thiết Kế</label>
                    <input type="text" class="form-control" name="ThietKe">
                </div>
                <!-- Tiếp tục với các trường khác theo mẫu này -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Areas/AssetAdmin/js/product/previewFile.js"></script>
