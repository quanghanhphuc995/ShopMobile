@model ShopConnection.LoaiSanPham
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    :root {
        --text-black: black;
    }

    h3 {
        color: var(--text-black);
    }

    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    label {
        color: var(--text-black);
    }

    input[type=submit]:hover {
        background-color: #45a049;
    }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .mrc {
        margin: auto;
    }
</style>

<h2 class="ml-16">Chỉnh Sửa Loại Sản Phẩm</h2>

<div>
    @using (Html.BeginForm("Edit", "LoaiSanPhamAdmin", FormMethod.Post, new { @Style = "" }))
    {
        <label for="fname">Mã Loại Sản Phẩm</label>
        <input type="text" id="fname"class="cl-black" name="MaLoaiSanPham" required value="@Model.MaLoaiSanPham" readonly>

        <label for="lname">Tên Loại Sản Phẩm</label>
        <input type="text" id="lname" class="cl-black" name="TenLoaiSanPham" required value="@Model.TenLoaiSanPham">

        <label for="country">Tình Trạng</label>
        <select id="country" class="cl-black" name="TinhTrang" required value="@Model.TinhTrang">
            @if (Model.TinhTrang == "0")
            {
                <option value="0" selected>0</option>
                <option value="1">1</option>
            }
            else
            {
                <option value="0">0</option>
                <option value="1" selected>1</option>
            }

        </select>

        <input type="submit" value="Chỉnh Sửa">
    }
</div>




